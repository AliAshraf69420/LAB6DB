@page
@model LAB6DB.Pages.CreateModel
@{
    ViewData["Title"] = "Add Task";
}

<div class="container">
    <h1 class="my-4">Add Task</h1>

    <form method="post">
        <div class="mb-3">
            <label asp-for="TaskTitle" class="form-label">Task Title</label>
            <input asp-for="TaskTitle" class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-warning">Add Task</button>
        <a class="btn btn-secondary" href="/Index">Cancel</a>
    </form>
</div>



